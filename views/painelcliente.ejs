<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel do Cliente</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            padding-top: 70px; /* Adiciona espaço para a navbar */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .content {
            flex: 1;
        }
        .nav-pills .nav-link {
            border-radius: 0;
            color: #003366;
        }
        .nav-pills .nav-link.active {
            border-radius: 0 10px 10px 10px;
            background-color: #f9f9f9;
        }
        .form-group label {
            font-weight: bold;
        }
        .btn-primary {
            background-color: #003366;
            border: none;
        }
        .btn-primary:hover {
            background-color: #002244;
        }
        .btn-info {
            background-color: #00AEEF;
            border: none;
        }
        .btn-info:hover {
            background-color: #007B9E;
        }
        .btn-secondary {
            background-color: #666;
            border: none;
        }
        .btn-secondary:hover {
            background-color: #333;
        }
        .list-group-item {
            border: none;
            border-bottom: 1px solid #ddd;
        }
        .modal-footer .btn-secondary {
            background-color: #555;
        }
        .modal-footer .btn-primary {
            background-color: #003366;
        }
        .custom-file-input ~ .custom-file-label::after {
            content: "Procurar";
            background-color: #003366;
            color: #fff;
        }
        .custom-file-label {
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: center;
        }
        .star-rating input[type="radio"] {
            display: none;
        }
        .star-rating label {
            font-size: 2rem;
            color: #ddd;
            cursor: pointer;
        }
        .star-rating input[type="radio"]:checked ~ label {
            color: #FFD700;
        }
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #FFD700;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container mt-5 content">
        <div class="row">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <div class="profile-userpic">
                        <img src="/imagens/<%= cliente.fotoPerfil %>" class="img-responsive" alt="">
                    </div>
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            <%= cliente.nome %>
                        </div>
                        <div class="profile-usertitle-job">
                            Cliente
                        </div>
                    </div>
                    <div class="profile-userbuttons">
                        <a href="/chat?destinatarioId=<%= cliente.id %>" class="btn btn-info w-100 mb-3">Chat</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    <h3>Compras Recentes</h3>
                    <div class="row">
                        <% compras.forEach(compra => { %>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div id="carousel<%= compra.produto.id %>" class="carousel slide" data-ride="carousel">
                                        <div class="carousel-inner">
                                            <% JSON.parse(compra.produto.fotos).forEach((foto, index) => { %>
                                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                                    <img src="/imagens/<%= foto %>" class="card-img-top" alt="Foto do Produto">
                                                </div>
                                            <% }); %>
                                        </div>
                                        <a class="carousel-control-prev" href="#carousel<%= compra.produto.id %>" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carousel<%= compra.produto.id %>" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title"><a href="/produtos/<%= compra.produto.id %>"><%= compra.produto.nome %></a></h5>
                                        <p class="card-text">R$ <%= compra.produto.preco %></p>
                                        <% if (compra.codigoRastreio) { %>
                                            <p class="card-text">Código de Rastreio: <%= compra.codigoRastreio %></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.img-expandable').on('click', function() {
                var src = $(this).attr('src');
                var modal = '<div class="modal fade" id="imgModal" tabindex="-1" role="dialog" aria-labelledby="imgModalLabel" aria-hidden="true">' +
                            '<div class="modal-dialog modal-lg" role="document">' +
                            '<div class="modal-content">' +
                            '<div class="modal-header">' +
                            '<h5 class="modal-title" id="imgModalLabel">Imagem Expandida</h5>' +
                            '<button type="button" class="close" data-dismiss="modal" aria-label="Close">' +
                            '<span aria-hidden="true">&times;</span>' +
                            '</button>' +
                            '</div>' +
                            '<div class="modal-body">' +
                            '<img src="' + src + '" class="img-fluid" alt="Imagem Expandida">' +
                            '</div>' +
                            '<div class="modal-footer">' +
                            '<button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>' +
                            '</div>' +
                            '</div>' +
                            '</div>' +
                            '</div>';
                $('body').append(modal);
                $('#imgModal').modal('show');
                $('#imgModal').on('hidden.bs.modal', function () {
                    $('#imgModal').remove();
                });
            });

            // Atualiza o nome do arquivo selecionado
            $('.custom-file-input').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                $(this).siblings('.custom-file-label').addClass('selected').html(fileName);
            });
        });
    </script>
</body>
