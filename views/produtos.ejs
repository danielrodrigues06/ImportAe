<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Produtos</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <!-- Barra lateral de filtros -->
      <div class="col-md-3">
        <h4>Filtros</h4>
        <form action="/produtos" method="GET">
          <div class="form-group">
            <label for="precoMin">Preço Mínimo</label>
            <input type="number" class="form-control" id="precoMin" name="precoMin" placeholder="0">
          </div>
          <div class="form-group">
            <label for="precoMax">Preço Máximo</label>
            <input type="number" class="form-control" id="precoMax" name="precoMax" placeholder="1000">
          </div>
          <div class="form-group">
            <label for="origem">Origem</label>
            <select class="form-control" id="origem" name="origem">
              <option value="">Todas</option>
              <option value="China">China</option>
              <option value="EUA">EUA</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Aplicar Filtros</button>
        </form>
      </div>
      
      <!-- Formulário de Pesquisa -->
      <div class="col-md-9">
        <form class="form-inline mb-4" action="/produtos" method="GET">
          <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" aria-label="Pesquisar" name="q">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
        </form>

        <div class="row">
          <% produtos.forEach(produto => { %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <!-- Exibindo as fotos do produto -->
                <div id="carousel<%= produto.id %>" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <% JSON.parse(produto.fotos).forEach((foto, index) => { %>
                      <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img src="/imagens/<%= foto %>" class="d-block w-100" alt="Foto do Produto">
                      </div>
                    <% }); %>
                  </div>
                  <a class="carousel-control-prev" href="#carousel<%= produto.id %>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel<%= produto.id %>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>

                <div class="card-body">
                  <h5 class="card-title"><%= produto.nome %></h5>
                  <p class="card-text">Preço: R$ <%= produto.preco %></p>
                  <p class="card-text"><%= produto.descricao %></p>
                  <p class="card-text">Estoque: <%= produto.estoque %></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                    Vendido por: <a href="/perfil/<%= produto.vendedorProduto.id %>"><%= produto.vendedorProduto ? produto.vendedorProduto.nome : "Desconhecido" %></a>
                    <% if (produto.vendedorProduto && produto.vendedorProduto.fotoPerfil) { %>
                      <img src="/imagens/<%= produto.vendedorProduto.fotoPerfil %>" alt="Foto do Vendedor" class="img-fluid rounded-circle" width="30">
                    <% } %>
                    <% if (produto.vendedorProduto && produto.vendedorProduto.notaMedia) { %>
                      <p>Nota: <%= produto.vendedorProduto.notaMedia %>/5 estrelas</p>
                    <% } %>
                  </small>
                  <% if (produto.estoque > 0) { %>
                    <a href="/produtos/<%= produto.id %>" class="btn btn-primary">Ver Detalhes</a>
                  <% } else { %>
                    <button class="btn btn-secondary" disabled>Indisponível</button>
                  <% } %>
                  <% if (produto.vendedorProduto) { %>
                    <a href="/chat?destinatarioId=<%= produto.vendedorProduto.id %>" class="btn btn-info">Chat com Vendedor</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>