<!-- views/produtos.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Catálogo de Produtos</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Catálogo de Produtos</h1>
    <div class="row">
      <% produtos.forEach(produto => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <!-- Exibindo as fotos do produto -->
            <div id="carousel<%= produto.id %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <% JSON.parse(produto.fotos).forEach((foto, index) => { %>
                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <img src="/imagens/<%= foto %>" class="d-block w-100" alt="Foto do Produto">
                  </div>
                <% }); %>
              </div>
              <a class="carousel-control-prev" href="#carousel<%= produto.id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel<%= produto.id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>

            <div class="card-body">
              <h5 class="card-title"><%= produto.nome %></h5>
              <p class="card-text">Preço: R$ <%= produto.preco %></p>
              <p class="card-text"><%= produto.descricao %></p>
              <p class="card-text">Estoque: <%= produto.estoque %></p>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    Vendido por: <%= produto.vendedor ? produto.vendedor.nome : "Desconhecido" %>
                    <% if (produto.vendedor && produto.vendedor.fotoPerfil) { %>
                      <img src="/imagens/<%= produto.vendedor.fotoPerfil %>" alt="Foto do Vendedor" class="img-fluid rounded-circle" width="30">
                  <% } %>
                  </small>
                  <a href="/comprar/<%= produto.id %>" class="btn btn-primary float-right">
                    <i class="bi bi-cart-fill"></i> Comprar
                  </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.6/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
