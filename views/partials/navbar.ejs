<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<nav class="navbar navbar-expand-lg fixed-top">
  <a class="navbar-brand ml-5 d-flex align-items-center" href="/">
    <img src="/imagens/logoimportae.png" alt="Logo">
    ImportAê
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
    <!-- Barra de Pesquisa -->
    <form class="form-inline my-2 my-lg-0 search-bar" action="/produtos" method="GET">
      <input class="form-control mr-sm-2" type="search" placeholder="Buscar produtos" aria-label="Search" name="q">
      <button class="btn my-2 my-sm-0" type="submit">
        <i class="bi bi-search"></i> <!-- Ícone de pesquisa do Bootstrap -->
      </button>
    </form>

    <!-- Dropdown de Categorias -->
    <ul class="navbar-nav ml-2">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="categoriasDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categorias
        </a>
        <div class="dropdown-menu" aria-labelledby="categoriasDropdown">
          <a class="dropdown-item" href="/produtos?categoria=Eletrônicos">
            <i class="fas fa-tv"></i> Eletrônicos
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Roupas">
            <i class="fas fa-tshirt"></i> Roupas
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Livros">
            <i class="fas fa-book"></i> Livros
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Móveis">
            <i class="fas fa-couch"></i> Móveis
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Brinquedos">
            <i class="fas fa-puzzle-piece"></i> Brinquedos
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Ferramentas">
            <i class="fas fa-wrench"></i> Ferramentas
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Beleza">
            <i class="fas fa-heart"></i> Beleza
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Esportes">
            <i class="fas fa-basketball-ball"></i> Esportes
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Automotivo">
            <i class="fas fa-car"></i> Automotivo
          </a>
          <a class="dropdown-item" href="/produtos?categoria=Alimentos">
            <i class="fas fa-utensils"></i> Alimentos
          </a>
        </div>
      </li>
    </ul>

    <!-- Dropdown com todas as opções -->
    <div class="navbar-nav">
      <% if (logado) { %>
        <% if (user.tipo === 'vendedor') { %>
          <a href="/cadastrarProduto" class="btn header-btn mr-2 ml-2">Cadastrar Produto</a>
        <% } %>
        <div class="dropdown">
          <img src="/imagens/<%= user.fotoPerfil %>" alt="Foto do Usuário" class="perfil-img dropdown-toggle" style="width: 50px; height: 50px; border-radius: 50%;" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <span class="dropdown-item">Olá, <%= user.nome %>!</span>
            <a class="dropdown-item" href="/perfil/<%= user.id %>">Meu Perfil</a> <!-- Adiciona o link para o perfil do usuário -->
            <% if (user.tipo === 'vendedor') { %>
              <a class="dropdown-item" href="/painelvendedor">Painel do Vendedor</a>
            <% } else if (user.tipo === 'cliente') { %>
              <a class="dropdown-item" href="/painelcliente">Painel do Cliente</a>
            <% } %>
            <a class="dropdown-item" href="/produtos">Produtos</a>
            <a class="dropdown-item" href="/chat">Chat</a>
            <a class="dropdown-item" href="/logout">Logout</a>
          </div>
        </div>
      <% } else { %>
        <a href="/login" class="btn header-login-btn mr-2 ml-2">Login</a>
        <a href="/cadastro" class="btn header-btn mr-5">Cadastre-se</a>
      <% } %>
    </div>
  </div>
</nav>