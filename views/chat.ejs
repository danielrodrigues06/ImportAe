<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Privado</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        #mensagensContainer {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            height: 300px;
            overflow-y: scroll;
        }
        .mensagem {
            margin-bottom: 10px;
        }
        #chatsRecentes {
            border: 1px solid #ccc;
            padding: 10px;
            height: 300px;
            overflow-y: scroll;
        }
        .perfil-img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Chat Privado</h1>
        <div class="row">
            <!-- Aba lateral com chats recentes -->
            <div class="col-md-3">
                <h4>Chats Recentes</h4>
                <div id="chatsRecentes">
                    <% chatsRecentes.forEach(chat => { %>
                        <div class="chat-recent">
                            <a href="/chat?destinatarioId=<%= chat.usuarioId === usuario.id ? chat.destinatarioId : chat.usuarioId %>">
                                <img src="/imagens/<%= chat.usuarioId === usuario.id ? chat.destinatario.fotoPerfil : chat.usuario.fotoPerfil %>" alt="Foto de Perfil" class="perfil-img">
                                <%= chat.usuarioId === usuario.id ? (chat.destinatario ? chat.destinatario.nome : 'Desconhecido') : (chat.usuario ? chat.usuario.nome : 'Desconhecido') %>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
            <div class="col-md-9">
                <div class="d-flex align-items-center mb-3">
                    <img src="/imagens/<%= destinatario.fotoPerfil %>" alt="Foto de Perfil" class="perfil-img mr-3">
                    <h4><%= destinatario.nome %></h4>
                </div>
                <div id="mensagensContainer" class="mb-3"></div>
                <textarea id="mensagemTexto" class="form-control mb-3" placeholder="Digite sua mensagem aqui..."></textarea>
                <input type="file" id="imagem" class="form-control mb-3">
                <button onclick="enviarMensagem()" class="btn btn-primary">Enviar</button>
            </div>
        </div>
    </div>
    <script>
        async function carregarMensagens() {
            const destinatarioId = '<%= destinatario.id %>';
            const response = await fetch(`/chat/mensagens/${destinatarioId}`);
            if (response.ok) {
                const mensagens = await response.json();
                let mensagensHtml = '';
                mensagens.forEach(mensagem => {
                    mensagensHtml += `<div class="mensagem">
                        <p><strong>${mensagem.remetente.nome}:</strong> ${mensagem.texto}</p>`;
                    if (mensagem.imagem) {
                        mensagensHtml += `<img src="/imagens/${mensagem.imagem}" alt="Imagem" class="img-fluid">`;
                    }
                    mensagensHtml += `<p class="data">${new Date(mensagem.createdAt).toLocaleString()}</p>
                    </div>`;
                });
                document.getElementById('mensagensContainer').innerHTML = mensagensHtml;
            } else {
                console.error('Erro ao carregar mensagens');
            }
        }

        async function enviarMensagem() {
            const texto = document.getElementById('mensagemTexto').value;
            const destinatarioId = '<%= destinatario.id %>';
            const imagemInput = document.getElementById('imagem');
            const formData = new FormData();

            formData.append('texto', texto);
            formData.append('destinatarioId', destinatarioId);
            if (imagemInput.files.length > 0) {
                formData.append('imagem', imagemInput.files[0]);
            }

            if (!texto && imagemInput.files.length === 0) {
                alert('Por favor, preencha todos os campos.');
                return;
            }

            const response = await fetch('/chat/enviar', {
                method: 'POST',
                body: formData,
            });
            if (response.ok) {
                document.getElementById('mensagemTexto').value = ''; // Limpa o campo de texto
                document.getElementById('imagem').value = ''; // Limpa o campo de imagem
                carregarMensagens(); // Recarrega as mensagens
            } else {
                alert('Falha ao enviar mensagem.');
            }
        }

        // Chama carregarMensagens a cada segundo
        setInterval(carregarMensagens, 1000); // 1000 ms = 1 segundo

        document.addEventListener('DOMContentLoaded', carregarMensagens);
    </script>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>